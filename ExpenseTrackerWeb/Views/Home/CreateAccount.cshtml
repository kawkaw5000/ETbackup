@model ExpenseTracker.Data.Models.User

@{
    ViewData["Title"] = "CreateAccount";
    Layout = "FormLayout";
}
<div class="login-container">
    <form asp-action="CreateAccount">
        <div class="title">
            <p>Create Account</p>
        </div>
        <div>
            <input asp-for="Email" type="text" class="email" placeholder="Email" required>
        </div>
        <div>
            <input asp-for="Username" type="text" class="username" placeholder="Username" required>
        </div>
        <div class="pass-input">
            <input asp-for="Password" type="password" class="password" id="password" placeholder="Password" required>
            <span class="toggle-password" onclick="togglePasswordVisibility()">
                <img class="img-eye" src="/images/loginImg/openEye.svg" alt="Show/Hide" id="eye-icon">
            </span>
        </div>
        <div class="pass-input">
            <input asp-for="ConfirmPassword" type="password" class="password" id="confirm-password" placeholder="Confirm Password" required>
            <span class="toggle-password" onclick="toggleConfirmPasswordVisibility()">
                <img class="img-eye" src="/images/loginImg/openEye.svg" alt="Show/Hide" id="eyeconfirm-icon">
            </span>
        </div>

        <input type="hidden" asp-for="Code" />
        <input type="hidden" asp-for="Status" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="DateModified" />

        <div>
            <input type="checkbox" asp-for="Agree" required>
            <label>I agree with Terms and Conditions</label>
        </div>
        <div class="login-register">
            <button type="submit" value="Create" class="reg-btn">
                Register
            </button>
        </div>
        <div class="already-acc">
            <a href="@Url.Action("CreateAccount", "CreateAccount")">Create</a>
        </div>
    </form>
</div>



